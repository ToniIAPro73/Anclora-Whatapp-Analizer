# ============================================
# CONFIGURACIÓN BASE DE DATOS POSTGRESQL
# ============================================
DB_HOST=localhost
DB_PORT=5452
DB_USER=whatsapp_analyzer
DB_PASSWORD=tu_password_aqui
DB_NAME=whatsapp_ai_analyzer

# Credenciales del superusuario PostgreSQL (solo para setup inicial)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_superuser_aqui

# ============================================
# CONFIGURACIÓN OLLAMA
# ============================================
OLLAMA_HOST=http://localhost:11434

# IMPORTANTE: Ejecuta 'ollama list' y selecciona un modelo
# Recomendados para 4GB VRAM:
# - llama3.1:8b (mejor calidad)
# - mistral:7b (más rápido)
# - qwen2.5:7b (equilibrado)
OLLAMA_MODEL=gemma3:4b

# ============================================
# CONFIGURACIÓN WHATSAPP
# ============================================
WHATSAPP_SESSION_PATH=./auth_info

# ============================================
# CONFIGURACIÓN APLICACIÓN
# ============================================
LOG_LEVEL=info
NODE_ENV=development

# Opcional: Tiempo máximo de scraping (segundos)
SCRAPING_TIMEOUT=30

# Opcional: Número de reintentos en caso de error
MAX_RETRIES=2